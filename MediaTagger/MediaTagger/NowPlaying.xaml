<UserControl x:Class="MediaTagger.NowPlaying"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaTagger"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    <StackPanel x:Name="infoPanel" Height="75" Background="Black" Opacity="0.5">
        <TextBlock x:Name="infoTitle" Foreground="White" FontSize="20" TextAlignment="Right">Title</TextBlock>
        <TextBlock x:Name="infoArtist" Foreground="White" FontSize="18" TextAlignment="Right">Artist</TextBlock>
        <TextBlock x:Name="infoAlbum" Foreground="White" FontSize="14" TextAlignment="Right">Album (Year)</TextBlock>
    </StackPanel>
</UserControl>
